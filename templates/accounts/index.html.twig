{% extends 'base.html.twig' %}

{% block title %}Your Accounts{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        Your accounts
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <th>#</th>
                <th>Name</th>
                <th>Action</th>
            </thead>
            <tbody>
                {% if accounts is empty %}
                    <tr>
                        <td colspan="3">No accounts yet.</td>
                    </tr>
                {% else %}
                    {% for account in accounts %}
                    <tr>
                        <td>{{ account.id }}</td>
                        <td>{{ account.getAccountName() }}</td>
                        <td>
                            <a href="/account/{{ account.id }}" class="btn btn-info btn-sm">Details</a>
                            <a href="/account/transaction/{{ account.id }}" class="btn btn-primary btn-sm">Add transaction</a>
                            <a href="/account/edit/{{ account.id }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="float-right clearfix">
            <a href="/account/new" class="btn btn-success btn-sm">Add a new account</a>
        </div>
    </div>
</div>
{% endblock %}
