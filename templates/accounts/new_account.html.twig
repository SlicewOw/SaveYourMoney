{% extends 'base.html.twig' %}

{% block title %}New account{% endblock %}

{% block body %}
 {{ form_start(form) }}

    <div class="card">

        <div class="card-header">
            Add new account
        </div>

        <div class="card-body">

            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.account_name) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.start_amount) }}
                </div>
            </div>

        </div>

        <div class="card-footer">
            {{ form_row(form.save) }}
        </div>

    </div>

 {{ form_end(form) }}
{% endblock %}
